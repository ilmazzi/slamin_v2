@import 'tailwindcss';

@source '../../vendor/laravel/framework/src/Illuminate/Pagination/resources/views/*.blade.php';
@source '../../storage/framework/views/*.php';
@source '../**/*.blade.php';
@source '../**/*.js';

@theme {
    --font-sans: 'Inter', ui-sans-serif, system-ui, sans-serif;
    
    --color-primary-50: #f8fafc;
    --color-primary-100: #f1f5f9;
    --color-primary-200: #e2e8f0;
    --color-primary-300: #cbd5e1;
    --color-primary-400: #94a3b8;
    --color-primary-500: #64748b;
    --color-primary-600: #475569;
    --color-primary-700: #334155;
    --color-primary-800: #1e293b;
    --color-primary-900: #0f172a;
    
    --color-accent-50: #fdf4f3;
    --color-accent-100: #fce8e6;
    --color-accent-200: #f9d5d2;
    --color-accent-300: #f4b5ae;
    --color-accent-400: #ec8b81;
    --color-accent-500: #e06155;
    --color-accent-600: #cc4237;
    --color-accent-700: #ab352c;
    --color-accent-800: #8d2f28;
    --color-accent-900: #752c26;
    
    --color-secondary-50: #f6f7f6;
    --color-secondary-100: #e3e6e3;
    --color-secondary-200: #c7ccc7;
    --color-secondary-300: #a4aba4;
    --color-secondary-400: #7f8a7f;
    --color-secondary-500: #637063;
    --color-secondary-600: #4e5a4e;
    --color-secondary-700: #414941;
    --color-secondary-800: #373d37;
    --color-secondary-900: #2f332f;
}

/* Custom SCSS Styles */
$primary: #64748b;
$accent: #e06155;
$secondary: #637063;

.bg-primary { background-color: $primary !important; }
.bg-accent { background-color: $accent !important; }
.bg-secondary { background-color: $secondary !important; }

.text-gradient {
    background: linear-gradient(135deg, $accent, #ab352c);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}
